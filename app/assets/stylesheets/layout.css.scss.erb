@import "variables";

html{
  background: none;
  background-color: transparent;
}
body{
	background: url(<%=image_path "homepage_city.jpg"%>) no-repeat center center #749bc6;
	-o-background-size: cover;
	-moz-background-size: cover;
	-ie-background-size: cover;
	-webkit-background-size: cover;
	background-size: cover;
	color:$font-color;
	
	a{
		color: $font-color-anchor;
		&:hover{
			background-color:rgba(255,255,255,0.05);
			text-decoration:none;
		}
		&:visited{
			color: $font-color-anchor-visited;
		}
	}
}
.container-fluid{
  background: none;
  background-color: transparent;
  box-shadow: none;
}

.container-fluid > .row-fluid > .centered-span{
  margin: 0px auto;
  float:none;
  h1, h2, h3, p{
    text-align:center;
  }
}

.well{
  background: rgba(0,0,0, 0.03);
}
