<script type="text/javascript" charset="utf-8">
	$(function(){
		$('.datetime').timepicker();
	});
</script>

<%= simple_form_for [@inflatable, @booking] do |f| %>
<%= f.input :inflatable_id, :as => :hidden %>
<%= f.input :name %>
<%= f.input :email %>
<%= f.input :phone %>
<%= f.input :address %>
<%= f.input :city %>
<%= f.input :state, :as => :select, :collection => %w[AL AK AS AZ AR CA CO CT DE DC FM FL GA GU HI ID IL IN IA KS KY LA ME MH MD MA MI MN MS MO MT NE NV NH NJ NM NY NC ND MP OH OK OR PW PA PR RI SC SD TN TX UT VT VI VA WA WV WI WY] %>
<%= f.input :zip %>
<%= f.input :party_date, :as => :string, :input_html => {:value => cookies[:fromdate], :class => 'datetime'} %>
<%= f.input :duration, :collection => 2..8, :selected => cookies[:duration] %>
<%= f.button :submit %> | <%= link_to "Cancel", @inflatable %>
<% end %>

