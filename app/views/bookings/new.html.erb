<script type="text/javascript" charset="utf-8">
	$(function(){
		$('.datetime').timepicker();
	});
</script>

<%= simple_form_for [@inflatable, @booking] do |f| %>
<%= f.input :inflatable_id, :as => :hidden %>
<%= f.input :address, :as => :text, :input_html => {:rows => 7, :cols => 40} %>
<%= f.input :party_date, :as => :string, :input_html => {:value => cookies[:fromdate], :class => 'datetime'} %>
<%= f.input :duration, :collection => 2..8, :selected => cookies[:duration] %>
<%= f.button :submit %> | <%= link_to "Cancel", @inflatable %>
<% end %>

