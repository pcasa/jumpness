<h1>Listing inflatables</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Name</th>
    <th>Description</th>
    <th>Is active</th>
    <th>Up to 4 hours</th>
    <th>Up to 8 hours</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inflatables.each do |inflatable| %>
  <tr>
    <td><%= inflatable.company_id %></td>
    <td><%= inflatable.name %></td>
    <td><%= inflatable.description %></td>
    <td><%= inflatable.is_active %></td>
    <td><%= inflatable.up_to_4_hours %></td>
    <td><%= inflatable.up_to_8_hours %></td>
    <td><%= link_to 'Show', inflatable %></td>
    <td><%= link_to 'Edit', edit_inflatable_path(inflatable) %></td>
    <td><%= link_to 'Destroy', inflatable, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

